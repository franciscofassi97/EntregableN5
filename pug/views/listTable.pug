extends index.pug
block listProductos
 h1 Productos 
   if products.length > 0
    table 
     thead 
        tr 
         th Nombre 
         th Precio 
         th Imagen 
     tbody 
        each producto in products   
         tr 
            td= producto.title 
            td= producto.price 
            td
               img(src=producto.thumbnail, alt="img" width="50px" height="50px")
   else 
      p No hay productos
   a(href="/") Volver a productos
